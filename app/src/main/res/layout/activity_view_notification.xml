<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewNotification">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/rectangleprofile"
        android:layout_marginTop="-650dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eclipseprofile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"/>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:src="@drawable/edit"
        android:layout_marginTop="152dp"
        android:layout_marginLeft="215dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Profile"
        android:fontFamily="@font/poppins_medium"
        android:textSize="30dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="195dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/cardcolor6"
        android:fontFamily="@font/poppins"
        android:hint="Loading..."
        android:padding="11dp"
        android:textStyle="bold"
        android:textColorHint="@color/black"
        />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/name"
        android:padding="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/locationping"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_start"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="15dp"
                android:gravity="center|start"
                android:hint="Loading..."
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/tv_destination"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="15dp"
                android:gravity="center|start"
                android:hint="Loading..."
                android:textSize="16dp"/>





        </LinearLayout>

    </LinearLayout>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAccept"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:backgroundTint="@color/buttoncolor5"
        app:cornerRadius="10dp"
        android:text="Accept"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFull"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="155dp"
        android:backgroundTint="@color/buttoncolor1"
        app:cornerRadius="10dp"
        android:text="Full"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="285dp"
        android:backgroundTint="@color/white"
        android:text="Cancel"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        />




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:id="@+id/bottomNavigationView"
        android:layout_alignParentBottom="true"
        android:background="@color/navbg"
        android:elevation="2dp"
        app:menu="@menu/bottom_menu"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"/>




</RelativeLayout>