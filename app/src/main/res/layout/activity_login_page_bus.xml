<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginPage">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bylogo1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bylogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your account"
        android:textStyle="bold"
        android:textSize="18dp"
        android:fontFamily="@font/poppins"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/email"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:hint="Email"
        android:textColorHint="@color/black"
        android:padding="15dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/figma6"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/password"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/figma6"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot your password?"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        android:textSize="12dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="215dp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/figma"
        android:id="@+id/loginbtn"
        android:text="Log in"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/forgot"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/dont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:textStyle="bold"
        android:textSize="12dp"
        android:visibility="gone"
        android:layout_below="@+id/loginbtn"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textColor="@color/greenlink"
        android:clickable="true"
        android:textStyle="bold"
        android:textSize="12dp"
        android:visibility="gone"
        android:layout_below="@+id/loginbtn"
        android:layout_marginLeft="272dp"/>

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:textColorHighlight="@color/greenlink"
        android:textStyle="bold"
        android:textSize="15dp"
        android:visibility="gone"
        android:layout_below="@+id/signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:drawableRight="@drawable/line2"
        android:drawableLeft="@drawable/line1"
        android:drawablePadding="10dp"/>

    <Button
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/figma6"
        android:id="@+id/btn"
        android:text="Sign in with Google"
        android:textSize="16dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/or"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/google"/>




</RelativeLayout>