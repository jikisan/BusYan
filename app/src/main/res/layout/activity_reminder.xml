<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReminderActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:id="@+id/bottomNavigationView"
        android:layout_alignParentBottom="true"
        android:background="@color/navbg"
        android:elevation="2dp"
        app:menu="@menu/passenger_menu"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"/>

    <TextView
        android:id="@+id/busdes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins"
        android:text="Reminder"
        android:textSize="23dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/buscode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/busdes"
        android:text="  13C"
        android:fontFamily="@font/poppins_semibold"
        android:drawableStart="@drawable/bussave"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="45dp"/>



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/reminderdrop"
        android:layout_below="@id/busdes"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="60dp"
        android:onClick="showPopup"/>



</RelativeLayout>