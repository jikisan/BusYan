<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetReminder">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:id="@+id/bottomNavigationView"
        android:layout_alignParentBottom="true"
        android:background="@color/navbg"
        android:elevation="2dp"
        app:menu="@menu/passenger_menu"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"/>

    <TextView
        android:id="@+id/busdes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins"
        android:text="Reminder"
        android:textSize="23dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/buscode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/busdes"
        android:text="  13C"
        android:fontFamily="@font/poppins_semibold"
        android:drawableStart="@drawable/bussave"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="45dp"/>



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/reminderdrop"
        android:layout_below="@id/busdes"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="60dp"/>

    <ImageView
        android:layout_below="@id/busdes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/reminderrectangle"
        android:layout_marginTop="60dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:backgroundTint="@color/cardcolor4"
            app:cornerRadius="10dp"
            android:layout_below="@id/busdes"
            android:layout_marginTop="65dp"
            android:text="Set Reminder"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"/>

    <ImageView
        android:layout_width="186dp"
        android:layout_height="187dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:src="@drawable/timer" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/remove"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        app:backgroundTint="@color/cardcolor4"
        app:cornerRadius="10dp"
        android:layout_below="@id/busdes"
        android:layout_marginTop="425dp"
        android:text="Remove"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/setr"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        app:backgroundTint="@color/cardcolor4"
        app:cornerRadius="10dp"
        android:layout_below="@id/busdes"
        android:layout_marginTop="425dp"
        android:text="Set"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"/>




</RelativeLayout>